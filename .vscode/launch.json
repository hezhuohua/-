{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI 后端服务",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "True"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: 启动完整系统",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: 测试模块",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: 最小化后端服务",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/minimal_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "True"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: 安全测试",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests/test_security.py",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SECRET_KEY": "test-secret-key-for-debugging-only"
            }
        },
        {
            "name": "Python: 快速启动脚本",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/start_services.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
